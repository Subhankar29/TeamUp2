<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imname"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/name"
                android:layout_margin="5dp"/>


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imname"
                android:hint="Name"
                android:textColorHint="#BDBDBD"
                android:layout_margin="5dp"/>


        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/imname1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/username"
                    android:layout_margin="5dp"/>


                <EditText
                    android:id="@+id/etusername2"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imname1"
                    android:hint="Username"
                    android:textColorHint="#BDBDBD"
                    android:layout_margin="5dp"/>
            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/college"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account_balance_black_24dp"
                    android:layout_margin="19dp"/>
                <Spinner
                    android:id="@+id/static_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"/>


            </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/iname"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:layout_margin="5dp"/>


            <EditText
                android:id="@+id/etusername"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iname"
                android:hint="College ID"
                android:textColorHint="#BDBDBD"
                android:layout_margin="5dp"/>


        </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â“˜ Enter the Identificaion Number given to you by your college."
                android:paddingLeft="70dp"
                android:paddingRight="50dp"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/imgclas"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/branch"
                    android:layout_margin="5dp"/>


                <EditText
                    android:id="@+id/etclass"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgclas"
                    android:hint="Branch"
                    android:textColorHint="#BDBDBD"
                    android:layout_margin="5dp"/>


            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/isec"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sem"
                    android:layout_margin="7dp"/>


                <EditText
                    android:id="@+id/etsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Semester"
                    android:textColorHint="#BDBDBD"
                    android:layout_alignTop="@+id/isec"
                    android:layout_toRightOf="@+id/isec"
                    android:layout_toEndOf="@+id/isec" />


            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imemail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@+id/imemail"
            android:layout_margin="5dp"
            android:hint="Email"
            android:textColorHint="#BDBDBD"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imphone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/phone"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_toRightOf="@+id/imphone"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textColorHint="#BDBDBD"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/impasswordc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lock2"
                android:layout_margin="5dp"/>
            <EditText
                android:id="@+id/etpass"
                android:inputType="textPassword"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/impasswordc"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PASSWORD"
                android:textColorHint="#BDBDBD"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/ipasswordc"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pass"
                    android:layout_margin="5dp"/>
                <EditText
                    android:id="@+id/edtpass"
                    android:inputType="textPassword"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/ipasswordc"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RE-ENTER YOUR PASSWORD"
                    android:textColorHint="#BDBDBD"/>
            </RelativeLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnnext"
                android:text="next"
                android:textColor="#FFF"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape"

                android:alpha="2"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>